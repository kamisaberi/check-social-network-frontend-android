<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:descendantFocusability="beforeDescendants"
        android:fitsSystemWindows="true"
        android:focusable="true"
        android:layout_weight="1"
        android:focusableInTouchMode="true"
        tools:context=".activity.AddDuty2Activity">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="0px"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Reply.Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:descendantFocusability="beforeDescendants"
                    android:focusable="true"
                    android:focusedByDefault="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtTitle"
                        style="@style/Reply.Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Title"
                        android:nextFocusLeft="@id/edtTitle"
                        android:nextFocusUp="@id/edtTitle" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Reply.Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtDescription"
                        style="@style/Reply.Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Description" />

                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:background="@color/colorBackground"
                    android:visibility="visible" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtUsers"
                    style="@style/Reply.TextAppearance.MaterialComponents.Body1"
                    android:focusable="true"
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Users To Do:" />

                <com.arnahit.chipinputlayout.ChipsInputLayout
                    android:id="@+id/cilUsers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Start Typing To Select Users"
                    android:minHeight="40dp"
                    app:chip_showDetails="true" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:background="@color/colorBackground"
                    android:visibility="visible" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtExperts"
                    style="@style/Reply.TextAppearance.MaterialComponents.Body1"
                    android:layout_width="match_parent"
                    android:focusable="true"
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:layout_height="wrap_content"
                    android:text="Select Experts:" />

                <com.arnahit.chipinputlayout.ChipsInputLayout
                    android:id="@+id/cilExperts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Start Typing To Select Experts"
                    android:minHeight="40dp"
                    app:chip_showDetails="true" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:background="@color/colorBackground"
                    android:visibility="visible" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Reply.TextAppearance.MaterialComponents.Body1"
                    android:id="@+id/txtPriorities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:clickable="true"
                    android:focusableInTouchMode="true"

                    android:text="Select Pririty:" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chgPriorities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:singleLine="true"
                    app:singleSelection="true">

                    <!--<com.google.android.material.chip.Chip-->
                        <!--style="@style/Reply.Widget.MaterialComponents.Chip.Choice"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="Urgent"-->
                        <!--app:checkedIconVisible="true" />-->

                    <!--<com.google.android.material.chip.Chip-->
                        <!--style="@style/Reply.Widget.MaterialComponents.Chip.Choice"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="High"-->
                        <!--app:checkedIconVisible="true" />-->

                    <!--<com.google.android.material.chip.Chip-->
                        <!--style="@style/Reply.Widget.MaterialComponents.Chip.Choice"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="Normal"-->
                        <!--app:checkedIconVisible="true" />-->

                    <!--<com.google.android.material.chip.Chip-->
                        <!--style="@style/Reply.Widget.MaterialComponents.Chip.Choice"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="Low"-->
                        <!--app:checkedIconVisible="true" />-->

                </com.google.android.material.chip.ChipGroup>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:background="@color/colorBackground"
                    android:visibility="visible" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtGroups"
                    style="@style/Reply.TextAppearance.MaterialComponents.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:clickable="true"
                    android:focusableInTouchMode="true"

                    android:text="Select Group:" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chgGroups"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:singleSelection="true">


                </com.google.android.material.chip.ChipGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:background="@color/colorBackground"
                    android:visibility="visible" />


                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Reply.TextAppearance.MaterialComponents.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Start and End Date:" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnStartDateTime"
                    style="@style/Reply.Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/work_sans_medium"
                    android:gravity="left|center_vertical"
                    android:hint="Start Date And Time"
                    android:textAllCaps="true" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnEndDateTime"
                    style="@style/Reply.Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/work_sans_medium"
                    android:gravity="left|center_vertical"
                    android:hint="End Date And Time" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:background="@color/colorBackground"
                    android:visibility="visible" />


                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Reply.TextAppearance.MaterialComponents.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ALarms" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSetAlarms"
                    style="@style/Reply.Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/work_sans_medium"
                    android:gravity="left|center_vertical"
                    android:hint="Set Alarm" />

                



            </LinearLayout>



        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSend"
            style="@style/Reply.Widget.MaterialComponents.Button.OutlinedButton.2"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="SEND DUTY" />
    </RelativeLayout>

</LinearLayout>